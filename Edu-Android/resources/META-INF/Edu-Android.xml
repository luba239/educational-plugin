<idea-plugin>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.android</depends>

    <application-components>
        <component>
            <implementation-class>com.jetbrains.edu.android.EduAndroidApplicationComponent
            </implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="Educational">
        <pluginConfigurator language="edu-android"
                            implementationClass="com.jetbrains.edu.android.EduAndroidPluginConfigurator"/>
        <checkListener implementation="com.jetbrains.edu.android.EduAndroidStudyCheckListener"/>
    </extensions>

    <actions>
        <action class="com.jetbrains.edu.android.actions.CCDeleteTask"
                id="Educational.Educator.CCDeleteTask" use-shortcut-of="$Delete">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"
                          relative-to-action="Educational.Educator.ProjectView"/>
        </action>
        <action class="com.jetbrains.edu.android.actions.CCDeleteLesson"
                id="Educational.Educator.CCDeleteLesson" use-shortcut-of="$Delete">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"
                          relative-to-action="Educational.Educator.ProjectView"/>
        </action>
    </actions>
</idea-plugin>
